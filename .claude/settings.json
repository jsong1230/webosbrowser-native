{
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "0"
  },
  "hooks": {
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/scripts/log-progress.sh \"$AGENT_NAME\"",
            "description": "서브에이전트 완료 시 자동 로깅"
          }
        ]
      }
    ]
  },
  "mcpServers": {
    "chrome-devtools": {
      "command": "npx",
      "args": ["-y", "@anthropic-ai/mcp-server-chrome-devtools"],
      "description": "Chrome DevTools 접근 (콘솔, 네트워크, DOM 검사)"
    }
  }
}
